<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:App1.ViewModels" 
             x:DataType="viewmodels:FolderAddingViewModel"
             x:Class="App1.Views.FolderAddingPage"
             BackgroundColor="#252525">
    
    <ContentPage.Content>
        <StackLayout Padding="20" >
            <Entry Placeholder="Введите название папки" x:Name="EntryFolderName" PlaceholderColor="AliceBlue" Text="{Binding WritenName,Mode=TwoWay}" Margin="0, -10, 0, 0"/>
            <Button Command="{Binding AddNewFolderCommand}" Text="Создать" TextColor="AliceBlue" BackgroundColor="Gray"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>