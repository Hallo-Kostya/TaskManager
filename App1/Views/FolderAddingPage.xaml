<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:App1.ViewModels" 
             x:DataType="viewmodels:FolderAddingViewModel"
             x:Class="App1.Views.FolderAddingPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Введите название папки" x:Name="EntryFolderName" Text="{Binding WritenName,Mode=TwoWay}" Style="{StaticResource NoUnderlineEntry}" Margin="0, -10, 0, 0"/>
            <Button Command="{Binding AddNewFolderCommand}"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>