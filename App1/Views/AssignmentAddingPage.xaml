<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1.ViewModels"
             x:Class="App1.Views.AssignmentAddingPage"
             BackgroundImageSource="background.png">
    <ContentPage.BindingContext>
        <local:AssignmentAddingViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout BackgroundColor="#80000000" Padding="20">
            <Frame BackgroundColor="#952EAF" CornerRadius="50">
                <StackLayout>
                    <Label Text="Название задачи" FontSize="Medium" TextColor="AliceBlue"/>
                    <Entry Text="{Binding Assignment.Name, Mode=TwoWay}" FontSize="Medium" BackgroundColor="#952EAF"/>
                    
                    <Label Text="Описание" FontSize="Medium" TextColor="AliceBlue"/>
                    <Entry Text="{Binding Assignment.Description, Mode=TwoWay}" FontSize="Medium" BackgroundColor="#952EAF"/>

                    <Label x:Name="Datepick" Text="Дата" FontSize="Medium" />
                    <DatePicker x:Name="DatePickerDate" Date="{Binding Assignment.ExecutionDate, Mode=TwoWay}" DateSelected="DatePickerDate_DateSelected"/>

                    <Label x:Name="priorityPick" Text="Приоритет" FontSize="Medium" />
                    <Picker x:Name="picker"  SelectedItem="{Binding SelectPriorityCommand, Mode=TwoWay}">
                        <Picker.Items>
                            <x:String>Without</x:String>
                            <x:String>LowPriority</x:String>
                            <x:String>MediumPriority</x:String>
                            <x:String>HighPriority</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>
            </Frame>

            <StackLayout Orientation="Horizontal" Margin="0,20">
                <Button Text="Save" Command="{Binding SaveCommand}" BackgroundColor="#952EAF" CornerRadius="30" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="#8b6c96" CornerRadius="30" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
