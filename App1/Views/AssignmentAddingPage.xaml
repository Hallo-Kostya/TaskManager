<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1.ViewModels"
             x:Class="App1.Views.AssignmentAddingPage">
    <ContentPage.BindingContext>
        <local:AssignmentAddingViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black" Padding="20">
            <Frame BackgroundColor="#952EAF" CornerRadius="50">
                <StackLayout>
                    <Label Text="ID" FontSize="Medium" IsEnabled="False" TextColor="AliceBlue" />
                    <Entry Text="{Binding Assignment.ID, Mode=TwoWay}" FontSize="Medium" IsEnabled="False" BackgroundColor="#952EAF"/>

                    <Label Text="Text" FontSize="Medium" TextColor="AliceBlue"/>
                    <Entry Text="{Binding Assignment.Name, Mode=TwoWay}" FontSize="Medium" BackgroundColor="#952EAF"/>
                </StackLayout>
            </Frame>

            <StackLayout Orientation="Horizontal" Margin="0,20">
                <Button Text="Save" Command="{Binding SaveCommand}" BackgroundColor="#952EAF" CornerRadius="30" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="#8b6c96" CornerRadius="30" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>